amends "package://github.com/jdx/hk/releases/download/v1.36.0/hk@1.36.0#/Config.pkl"

hooks {
  ["pre-commit"] {
    fix = true
    stash = "git"
    steps {
      ["format"] {
        fix = "gradle spotlessApply"
      }
      ["secrets"] {
        check = "gitleaks git --staged --no-banner"
      }
    }
  }
}
